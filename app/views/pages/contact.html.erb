<div class="contact-page">
  <div class="content-contact">
    <div class="image-contact">
      <div class="carousel slide" data-interval="4000" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "institut_1.jpg", class: "d-block w-100 h-100" %>
          </div>

          <div class="carousel-item">
            <%= image_tag "institut_2.jpg", class: "d-block w-100 h-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="contact-content">
      <div class="title-page">
        <h1>Contact et accès</h1>
      </div>

      <div class="nav-bar-container">
        <div class="nav-bar">

          <%= link_to "/" do %>
            <div class="onglet-home">
              <h6>Accueil</h6>
            </div>
          <% end %>

          <%= link_to "/pages/offres" do %>
            <div class="onglet-offres">
              <h6>Offres & Évènements</h6>
            </div>
          <% end %>

          <%= link_to "/pages/tarifs" do %>
            <div class="onglet-tarifs">
              <h6>Tarifs</h6>
            </div>
          <% end %>

          <%= link_to "/pages/contact" do %>
            <div class="onglet-contact">
              <h6>Contact & Accès</h6>
            </div>
          <% end %>
        </div>
      </div>
      <div class="contact">
        <div class="infos-content">
          <div class="adresse">
            <p>
              Institut Brin De Douce’Heure<br><i class="fas fa-map-marker-alt"></i> 8 rue de la gourlière 85710 Châteauneuf
            </p>
          </div>

          <div class="telephone">
            <p><i class="fas fa-phone"></i> 06 13 20 19 66</p>
          </div>

          <div class="facebook-link">
            <p><i class="fab fa-facebook"></i> Rejoignez <strong><%= link_to "Brin De Douce’Heure", "https://www.facebook.com/Brin-De-DouceHeure-968973346643386", target: :_blank %></strong> sur Facebook.</p>
          </div>

          <div class="horaire">
            <div class="horaire-texte">
                <p>Uniquement sur RDV du <strong>Lundi</strong> au <strong>Vendredi de 9h à 12h</strong> / <strong>14h à 19h</strong> et le <strong>Samedi 9h à 16h</strong>.</p>
            </div>
          </div>
        </div>
        <%= link_to "https://www.bing.com/maps?q=brin%20de%20douce%27heure&pc=cosp&ptag=G6C24N109AC0C1DDA955&form=CONBNT&conlogo=CT3210127", :target => "_blank" do %>
          <div class="btn-itineraire">
            <div class="btn-map">
                <h5>M'y rendre</h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
